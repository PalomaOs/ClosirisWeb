@model Login
@{
    ViewData["Title"] = "Iniciar sesión";
}



    <body>
        
        <div class="containerBackground">
            <header class=" mastheadLogin text-center font text-white">
                <div class="masthead-content">
                    <div class="container px-5">
                        <h1 class=" mb-0">Te damos la bienvenida a CloSiris</h1>
                    </div>
                </div>
            </header>

            <main>
                <section>
                    <div class="container px-5">
                        <div class="row justify-content-center align-items-center">
                            <div class="col-lg-8">
                                <div class="card" style="border-radius: 1rem; background-color: #031435;">
                                    <div class="row g-0">
                                        <div class="col-md-6 d-none d-md-block position-relative">
                                            <img src="https://i.pinimg.com/564x/21/d1/c8/21d1c8d4e5ebbf8fef56adf44869931b.jpg"
                                                alt="login form" class="img-fluid"
                                                style="border-radius: 1rem 0 0 1rem;">
                                            <img src="/images/LogoC.png" alt="superpuesta" class="superimposed-img">
                                        </div>
                                        <div class="col-md-6 d-flex align-items-center"
                                            style="background-color: #031435; border-radius: 0 1rem 1rem 0;">
                                            <div class="card-body p-4 text-white">
                                                <form asp-action="Index">
                                                     
                                                    <div class="d-flex align-items-center flex-column mb-3 pb-1">
                                                        <span class="h2 fw-bold mb-0">Login</span>
                                                    </div>
                                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Accede
                                                        a tu
                                                        cuenta</h5>
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <div class="form-outline mb-4">    
                                                        <label asp-for="Email" class="form-label"></label>                                                
                                                        <input asp-for="Email" class="form-control form-control-lg"
                                                            placeholder="Email">
                                                        
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-outline mb-4">
                                                        <label asp-for="Password" class="form-label"></label>
                                                        <input asp-for="Password" class="form-control form-control-lg"
                                                            placeholder="Password">                                                        
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                    <div class="pt-1 mb-4">
                                                        <button type="submit" class="btn btn-lg btn-block"
                                                            style="background-color: #D3EDF6; color: #031435;"
                                                            >Login</button>
                                                    </div>
                                                    <a class="small text-muted" data-bs-toggle="modal"
                                                        data-bs-target="#signupModal">¿Olvido su
                                                        contraseña?</a>
                                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">¿No tiene una
                                                        cuenta? <a href="/SingUp" style="color: #393f81;">Registrese
                                                            aqui</a></p>
                                               </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                
            </main>

        </div>

        <div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel"
          aria-hidden="true">
          <div class="modal-dialog modal-md" style="background-color: #031435;">
              <div class="modal-content"
                  style="background-image: url('/img/fondoOndas.png'); background-color: #031435; background-repeat: no-repeat; background-size: 100% 100%;">
                  <div class="modal-header">
                      <h5 class="modal-title text-center text-white" id="signupModalLabel">Cambiar contraseña</h5>
                      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                          aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                      <div class="container">
                          <form class="w-100">
                              <div class="row">

                                  <div class="mb-2 mt-2">
                                      <div class="d-flex flex-row align-items-center mb-2">
                                          <i class="fas fa-envelope fa-lg me-3 fa-fw text-white"></i>
                                          <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                              <input type="email" id="form3Example3c" class="form-control" />
                                              <label class="form-label text-white"
                                                  for="form3Example3c">Correo</label>
                                          </div>
                                      </div>
                                      <div class="d-flex justify-content-end">
                                          <button type="button"
                                              class="btn btn-primary btn-md rounded-pill mt-0 mb-2">Aceptar</button>
                                      </div>
                                  </div>

                                  <div class="mb-4">
                                      <div class="d-flex flex-row align-items-center mb-2">
                                          <i class="fas fa-lock fa-lg me-3 fa-fw text-white"></i>
                                          <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                              <input type="password" id="form3Example4c" class="form-control" />
                                              <label class="form-label text-white"
                                                  for="form3Example4c">Token</label>
                                          </div>
                                      </div>
                                      <div class="d-flex justify-content-end">
                                          <button type="button"
                                              class="btn btn-primary btn-md rounded-pill mt-2 mb-2">Validar</button>
                                      </div>
                                  </div>

                                  <div class="mb-4">
                                      <div class="d-flex flex-row align-items-center mb-2">
                                          <i class="fas fa-key fa-lg me-3 fa-fw text-white"></i>
                                          <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                              <input type="password" id="form3Example4cd" class="form-control" />
                                              <label class="form-label text-white" for="form3Example4cd">Nueva
                                                  contraseña</label>
                                          </div>
                                      </div>
                                      <div class="d-flex justify-content-end">
                                          <button type="button"
                                              class="btn btn-primary btn-md rounded-pill mt-2 mb-2"
                                              data-bs-dismiss="modal">Aceptar</button>
                                      </div>
                                  </div>

                              </div>
                          </form>
                      </div>
                  </div>
              </div>
          </div>
      </div>
        
    </body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}