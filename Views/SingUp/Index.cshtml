@model User
@{
    ViewData["Title"] = "SingUP";
}

<body>
    <div class="containerBackground">
        <header class="mastheadLogin text-center font text-white">
            <div class="masthead-content">
                <div class="container px-5">
                    <h1 class="mb-0">¡Selecciona el plan para crear tu cuenta!</h1>
                </div>
            </div>
        </header>

        <main>
            <section>
                <div class="container px-5">
                    <div class="row gx-3 gy-5 align-items-center">

                        <div class="col-lg-6 d-flex justify-content-center">
                            <div class="card position-relative"
                                style="width: 100%; max-width: 22rem; height: 30rem; background-color: #D3EDF6; border-radius: 1rem;">
                                <div
                                    style="position: absolute; top: -35px; right: -20px; width: 80%; height: 20%; background-color: #1B72FF; border-radius: 1rem;">
                                </div>
                                <div
                                    style="position: absolute; top: 0px; right: 0px; width: 75%; height: 13%; background-color: #FFFFFF; border-radius: 0 1rem 0 1rem;">
                                    <h1 class="masthead-heading mb-0"
                                        style="color:#031435; text-align: center; margin: 0; padding-top: 10px;">50 MB
                                    </h1>
                                </div>
                                <div class="card-body text-center" style="margin-top: 70px;">
                                    <h1 class="masthead-heading mb-3">BÁSICO</h1>
                                    <div class="text-start ms-4">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="h3 fw-bold mb-0">Subir archivos</p>
                                            <img src="/images/yes.png" alt="Imagen 1"
                                                style="height: 30px; width: auto;margin-right: 10px;">
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="h3 fw-bold mb-0">Descargarlos</p>
                                            <img src="/images/yes.png" alt="Imagen 1"
                                                style="height: 30px; width: auto;margin-right: 10px;">
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="h3 fw-bold mb-0">Compartir</p>
                                            <img src="/images/no.png" alt="Imagen 1"
                                                style="height: 30px; width: auto;margin-right: 10px;">
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="h3 fw-bold mb-0">Eliminar archivos</p>
                                            <img src="/images/yes.png" alt="Imagen 1"
                                                style="height: 30px; width: auto;margin-right: 10px;">
                                        </div>
                                    </div>
                                    <button type="button" 
                                        class="btn btn-primary btn-xl rounded-pill mt-3" data-bs-toggle="modal"
                                        data-bs-target="#signupModal" onclick="setPlanAndStorage('Básico', '52428800')">Solicitar ahora</button>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 d-flex justify-content-center">
                            <div class="card position-relative"
                                style="width: 100%; max-width: 22rem; height: 30rem; background-color: #D3EDF6; border-radius: 1rem;">
                                <div
                                    style="position: absolute; top: -35px; right: -20px; width: 80%; height: 20%; background-color: #1B72FF; border-radius: 1rem;">
                                </div>
                                <div
                                    style="position: absolute; top: 0px; right: 0px; width: 75%; height: 13%; background-color: #FFFFFF; border-radius: 0 1rem 0 1rem;">
                                    <h1 class="masthead-heading mb-0"
                                        style="color:#031435; text-align: center; margin: 0; padding-top: 10px;">100 MB
                                    </h1>
                                </div>
                                <div class="card-body text-center" style="margin-top: 70px;">
                                    <h1 class="masthead-heading mb-3">PREMIUM</h1>
                                    <div class="text-start ms-4">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="h3 fw-bold mb-0">Subir archivos</p>
                                            <img src="/images/yes.png" alt="Imagen 1"
                                                style="height: 30px; width: auto;margin-right: 10px;">
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="h3 fw-bold mb-0">Descargarlos</p>
                                            <img src="/images/yes.png" alt="Imagen 1"
                                                style="height: 30px; width: auto;margin-right: 10px;">
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="h3 fw-bold mb-0">Compartir</p>
                                            <img src="/images/yes.png" alt="Imagen 1"
                                                style="height: 30px; width: auto;margin-right: 10px;">
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <p class="h3 fw-bold mb-0">Eliminar archivos</p>
                                            <img src="/images/yes.png" alt="Imagen 1"
                                                style="height: 30px; width: auto;margin-right: 10px;">
                                        </div>
                                    </div>
                                    <button type="button" asp-for="Plan"
                                        class="btn btn-primary btn-xl rounded-pill mt-3" data-bs-toggle="modal"
                                        data-bs-target="#signupModal" onclick="setPlanAndStorage('Premium', '104857600')" >Solicitar ahora</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content" style="background-color: #031435">
                        <div class="modal-header">
                            <h5 class="modal-title text-center text-white" id="signupModalLabel">Registrarse</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="container">
                                <form asp-action="Index" class="w-100" enctype="multipart/form-data" >
                                    
                                    <div class="row">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="col-md-6">
                                            
                                            
                                            <div class="mb-4">
                                                <div class="d-flex flex-row align-items-center">
                                                    <i class="fas fa-user fa-lg me-3 fa-fw text-white"></i>
                                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                        <label asp-for="Name" class="form-label text-white"></label>
                                                        <input asp-for="Name" type="text" class="form-control" />                                                        
                                                        <span asp-validation-for="Name" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mb-4">
                                                <div class="d-flex flex-row align-items-center">
                                                    <i class="fas fa-envelope fa-lg me-3 fa-fw text-white"></i>
                                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                        <label asp-for="Email" class="form-label text-white"></label>
                                                        <input asp-for="Email" type="email" id="form3Example3c"
                                                            class="form-control" />
                                                        
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mb-4">
                                                <div class="d-flex flex-row align-items-center">
                                                    <i class="fas fa-lock fa-lg me-3 fa-fw text-white"></i>
                                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                                        <label asp-for="Password" class="form-label text-white"></label>
                                                        <input asp-for="Password" type="password" id="form3Example4c"
                                                            class="form-control" />                                                        
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div>
                                                <div class="d-flex justify-content-center mb-4">
                                                    <img id="selectedAvatar"
                                                        src="https://mdbootstrap.com/img/Photos/Others/placeholder-avatar.jpg"
                                                        class="rounded-circle"
                                                        style="width: 200px; height: 200px; object-fit: cover;"
                                                        alt="example placeholder" />
                                                </div>
                                                
                                                <div class="d-flex justify-content-center">
                                                    <div data-mdb-ripple-init
                                                        class="btn btn-primary btn-lg rounded-pill mt-3">
                                                        <label asp-for="ImageProfileFormFile">Seleccionar imagen</label>
                                                        
                                                        <input asp-for="ImageProfileFormFile" accept="image/jpeg, image/png" class="form-control d-none" 
                                                            onchange="displaySelectedImage(event, 'selectedAvatar')" />
                                                           
                                                    </div>
                                                     
                                                </div>
                                                <span asp-validation-for="ImageProfileFormFile" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <input type="hidden" asp-for="Plan" id="planInput" />
                                    <input type="hidden" asp-for="FreeStorage" id="freeStorageInput" />

                                    <div class="d-flex justify-content-center mb-4">
                                        <button type="submit" class="btn btn-primary btn-xl rounded-pill mt-3"
                                            >Registrarme</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                function setPlanAndStorage(plan, freeStorage) {
                    document.getElementById('planInput').value = plan;
                    document.getElementById('freeStorageInput').value = freeStorage;
                }


                function displaySelectedImage(event, elementId) {
                    const selectedImage = document.getElementById(elementId);
                    const fileInput = event.target;

                    if (fileInput.files && fileInput.files[0]) {
                        const reader = new FileReader();

                        reader.onload = function (e) {
                            selectedImage.src = e.target.result;
                        };

                        reader.readAsDataURL(fileInput.files[0]);
                    }
                }
            </script>

        </main>

    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
